<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="144dp"
            android:layout_height="32dp"
            android:text="Pode Dirigir?"
            android:id="@+id/txv_dirigir" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="53dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="121dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="110dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_nome"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="72dp"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/txv_dirigir"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="75dp" android:hint="Nome"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_iniciar" android:layout_marginEnd="34dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="290dp"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/edt_nome"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="262dp"
            android:layout_height="263dp" app:srcCompat="@drawable/dirigir"
            android:id="@+id/imageView4" android:layout_marginEnd="75dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="74dp"
            android:layout_marginTop="68dp" app:layout_constraintTop_toBottomOf="@+id/btn_iniciar"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="106dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>