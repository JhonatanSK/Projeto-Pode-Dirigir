<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Tela2">

    <TextView
            android:text="Bem vindo Fulano!"
            android:layout_width="281dp"
            android:layout_height="69dp"
            android:id="@+id/txv_nome" android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="65dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="65dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="65dp" android:textAlignment="center"/>
    <TextView
            android:text="Indique sua idade:"
            android:layout_width="232dp"
            android:layout_height="34dp"
            android:id="@+id/textView2" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="104dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/txv_nome" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="53dp"/>
    <Spinner
            android:layout_width="379dp"
            android:layout_height="53dp"
            android:id="@+id/spn_lista" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="verificar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_verificar" android:layout_marginEnd="158dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="161dp"
            android:layout_marginTop="72dp" app:layout_constraintTop_toBottomOf="@+id/spn_lista"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Resultado"
            android:layout_width="227dp"
            android:layout_height="66dp"
            android:id="@+id/txv_resultado"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="109dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="97dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="87dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_verificar"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0"
            android:textSize="24sp" android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>